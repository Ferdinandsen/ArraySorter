<Window x:Class="ArraySorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <Border Height="320" Width="257" BorderBrush="Black"  BorderThickness="2" >
            <StackPanel>
                <DataGrid Name="dgUnsorted" Height="250" SelectionChanged="dgUnsorted_SelectionChanged"></DataGrid>
                <Button Name="btnSort" Height="20" Width="50" Margin="0,5,0,0" Click="btnSort_Click">SORT</Button>
            </StackPanel>
        </Border>
        <Border Height="320" Width="257" BorderBrush="Black"  BorderThickness="2" Margin="5,0,0,0" >
            <StackPanel>
                <DataGrid Name="dgsorted" Height="250"></DataGrid>
                <Button Name="btnUpdate" Height="20" Width="50" Margin="0,5,0,0">UPDATE</Button>
            </StackPanel>
        </Border>

    </StackPanel>
</Window>
